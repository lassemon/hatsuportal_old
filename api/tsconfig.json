{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "types": [
      "node",
      "express",
      "jest"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*spec.ts"
  ]
}